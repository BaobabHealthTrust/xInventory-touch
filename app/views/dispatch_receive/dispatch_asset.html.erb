<style>
  .dispatch_receive {
    width: 98%;
  }

  .buttons {
    width: 400px !important;
  }

  .sidebar-nav {
    font-size: 12px;
    padding-bottom: 40px;
  }

  .demographics {
    width: 99%;
  }

  .demographics td , th{
    text-align: left;
  }

  #sub-content-view {
    background: none repeat scroll 0 0 rgb(255, 235, 144);
    height: auto;
    border: 1px dotted #696969;
  }

  #sub-content-view hr {
    margin-left: 12px;
