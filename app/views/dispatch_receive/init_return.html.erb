<style>
.main-table {
  width: 99%;
  margin: 10px;
  font-size: 16px;
  text-align: left;
}

.main-table th {
  font-weight: bold;
  text-align: left;
}

.left-div {
  float: left;
  background-color: white;
  width: 70%;
  height: 530px;
  overflow: auto;
}

.right-div {
  float: right;
  background-color: white;
  width: 28%;
}

.asset-div {
  background-color: white;
  height: 390px;
  overflow: auto;
}

.asset-table {
  margin: 10px;
  width: 99%;
  font-size: 15px;
  text-align: left;
  padding-left: 10px;
}

#barcode {
  font-size: 20px;
  height: 70px;
  width: 500px;
}
</style>

<%= javascript_include_tag 'ToolKit/barcode' %>


<br />


<div class="left-div">

<table class="main-table">

<tr>
  <th>Date returned</th>
  <td>
    <%=session[:assets_to_return][:return_date].to_date.strftime('%d %B, %Y')%>
  </td>
</tr>

<tr>
  <th>Location</th>
  <td>
    <%=session[:assets_to_return][:return_site]%>
  </td>
</tr>
<tr>
  <th>Approved By</th>
  <td>
    <%= "#{@approving_name.first_name } #{@approving_name.last_name}"  %>
  </td>
</tr>
<tr>
  <th>Returned By</th>
  <td>
    <%= "#{@receiving_name.first_name } #{@receiving_name.last_name}" %>
  </td>
</tr>

</table>
<hr />

<div class="asset-div">
  <table class="asset-table">
   <%unless session[:assets_to_return][:assets].blank? %>
     <tr>
       <th>Serial number</th>
       <th>Asset</th>
       <th style="text-align: right; padding-right: 10px;">Quantity</th>
       <th>Asset condition</th>
       <th>Asset state</th>
     </tr>
   <%end%>

   <%(session[:assets_to_return][:assets] || []).each do |asset_id, quantity|
      asset = Item.find(asset_id)
   %>
    <tr>
      <td><%=asset.serial_number %></td>
      <td><%=asset.name%></td>
      <td style="text-align: right; padding-right: 10px;"><%=quantity%></td>
      <td><%=session[:assets_to_return][:current_state][asset.id]%></td>
      <td><%=session[:assets_to_return][:state][asset.id]%></td>
    </tr>
    <%end%>
    <%if session[:assets_to_return][:assets].blank? %>
      <tr>
        <td colspan="2" style="text-align: center;">
          Select assets to return
        </td>
      </tr>
    <%end%>
  </table>
</div>


</div>

<div class="right-div">

<p>
  <a class="buttons" href="/asset_search?receiving=true">Add asset</a>
</p>

<p>&nbsp;</p>

<p>
  <%if session[:assets_to_return][:assets].blank? %>
    <a class="buttons" href="#">Return</a>
  <%else%>
    <a class="buttons" href="/create_batch_return?type='return'">Return</a>
  <%end%>
</p>

</div>
