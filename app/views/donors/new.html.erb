<%#= javascript_include_tag "bootstrap-datepicker" %>
<%#= stylesheet_link_tag "datepicker" %>

<style>
  .content-details { text-align: center; }

  .asset-details { width: 100%; }

</style>
<script>
  tt_cancel_destination = '/assets'
</script>

<div class="page-header">
  <h1>Donor <small>register a donor</small></h1>
</div>


<section id='modals'>
  <div class="content-details">
    <%= form_tag :action => 'create', :method => :post  do %>

    <table class="asset-details">
      <tbody>
        <tr>
          <td><%=text_field(:donor, :name, :placeholder => "Name",
          :helpText => "Name") %>
          </td>
        </tr>
        <tr>
          <td><%=text_field(:donor, :abv, :placeholder => "Abbreviation",
          :helpText => "Abbreviation") %>
          </td>
        </tr>
        <tr>
          <td><%=text_area_tag("donor[description]", nil, :placeholder => "Description",
          :helpText => "Description") %>
          </td>
        </tr>
        </tbody>
       </table>

          <%end%>
        </div>
      </section>
