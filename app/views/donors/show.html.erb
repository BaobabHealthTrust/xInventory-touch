
<style>

  .buttons {
    width: 400px !important;
  }

  .sidebar-nav {
    font-size: 12px;
    padding-bottom: 40px;
  }

  .demographics {
    width: 99%;
  }

  .demographics td , th{
    text-align: left;
  }

  #sub-content-view {                                                           
    background: none repeat scroll 0 0 rgb(255, 235, 144);                      
    height: auto;                                                               
    border: 1px dotted #696969;                                                 
  }                                                                             
                                                                                
  #sub-content-view hr {                                                        
    margin-left: 12px;                                                          
    margin-right: 12px;                                                         
    -moz-box-sizing: border-box;                                                
    -moz-float-edge: margin-box;                                                
    border: 1px inset;                                                          
    color: gray;                                                                
    display: block;                                                             
    height: 2px;                                                                
    /*margin: 0.5em auto;*/                                                     
  }

  .demographics {
  margin-left: 10px;
  margin-top: 10px;
  font-family: Tahoma,Verdana,Arial;
  font-size: 11px; 
  width: 98%;
  text-align: left;
}

.demographics th{
  word-wrap: break-word;
  vertical-align: top;
  color: #404040;
}

.demographics td{
  vertical-align: top;
}

.xool_information {                                                           
  font-size: 11px;                                                              
  margin-left: 12px;                                                            
  margin-right: 12px;                                                           
}
</style>


<div class="page-header">
  <h1>donor <small>details</small></h1>
</div>

<section id='modals'>                                              

    <div id = "sub-content-view">

    <table class = "demographics">
      <tr>
        <th>Name:&nbsp;</th>
        <td>
          <%= @donor.name %>&nbsp;
          <%= @student.first_name rescue '' %>
        </td>
        <th>Abb:&nbsp;</th><td><%=@donor.abbreviation %></td>
      </tr>
        <th>Date registered:&nbsp;</th><td><%=@donor.created_at.strftime('%d %B %Y')%></td>
        <th>ID number:&nbsp;</td><td><%=params[:id].rjust(5,'0')%></td>
      </tr>
      <tr>
        <th>Address:&nbsp;</th><td><%=''%></td>
        <th>Home district:&nbsp;</th><td><%=''%></td>
      </tr>
    </table>

    <hr />

    <p class="xool_information"><strong>Project(s) funding</strong></p>


    <%(@programs || {}).each do |program_name,modules| %>
      <ul><%=program_name%>
      <%modules.each do |module_name| %>
        <ol style="font-weight:bold;"><%=module_name%></ol>
      <%end%>
      </ul>
    <%end%>

  </div>
  
  <div style="padding-top:10px;float:right;">                                   
    <table>                                                                     
      <tr><%if admin? %>                                                        
        <td><a href="<%=edit_donor_details_url(:id => @donor.id)%>">Edit</a>&nbsp;&nbsp;</td>
        <td><a href="<%=delete_donor_url(:id => @donor.id)%>">Delete</a>&nbsp;&nbsp;</td>
        <%end%>                                                                 
        <td><a href="/donor_search">Back</a></td>                               
      </tr>                                                                     
    </table>                                                                    
  </div>
</section> 




