
<style>

  .buttons {
    width: 400px !important;
  }

  .sidebar-nav {
    font-size: 12px;
    padding-bottom: 40px;
  }

  .demographics {
    width: 99%;
  }

  .demographics td , th{
    text-align: left;
  }

  #sub-content-view {                                                           
    background: none repeat scroll 0 0 rgb(255, 235, 144);                      
    height: auto;                                                               
    border: 1px dotted #696969;                                                 
  }                                                                             
                                                                                
  #sub-content-view hr {                                                        
    margin-left: 12px;                                                          
    margin-right: 12px;                                                         
    -moz-box-sizing: border-box;                                                
    -moz-float-edge: margin-box;                                                
    border: 1px inset;                                                          
    color: gray;                                                                
    display: block;                                                             
    height: 2px;                                                                
    /*margin: 0.5em auto;*/                                                     
  }

  .demographics {
  margin-left: 10px;
  margin-top: 10px;
  font-family: Tahoma,Verdana,Arial;
  font-size: 11px; 
  width: 98%;
  text-align: left;
}

.demographics th{
  word-wrap: break-word;
  vertical-align: top;
  color: #404040;
  font-size: 20px;                                                              
}

.demographics td{
  vertical-align: top;
  font-size: 20px;                                                              
}

.xool_information {                                                           
  font-size: 18px;                                                              
  margin-left: 12px;                                                            
  margin-right: 12px;                                                           
}
</style>


<section id='modals'>                                              

    <div id = "sub-content-view">

    <table class = "demographics">
      <tr>
        <th>Name:&nbsp;</th>
        <td>
          <%= @project.name %>&nbsp;
          <%= @student.first_name rescue '' %>
        </td>
        <th>Donor:&nbsp;</th><td><%=@donor.name%></td>
      </tr>
        <th>Date registered:&nbsp;</th><td><%=@project.created_at.strftime('%A, %d %B %Y')%></td>
      </tr>
    </table>

    <hr />

    <p class="xool_information"><strong>Project description</strong></p>
    <p class="xool_information">
    <%=render(:inline => print_content(@project.description))%> 
    </p>
  </div>
  
  <div style="padding-top:10px;">                                   
    <table style="width: 100%;">                                                                     
      <tr><%if admin? %>                                                        
        <td><a class="buttons" href="<%=edit_project_details_url(:id => @project.id)%>">Edit</a></td>
        <td><a class="buttons" href="<%=delete_project_url(:id => @project.id)%>">Delete</a></td>
        <%end%>                                                                 
        <td><a class="buttons" href="/projects_search">Back</a></td>                               
      </tr>                                                                     
    </table>                                                                    
  </div>

</section> 




