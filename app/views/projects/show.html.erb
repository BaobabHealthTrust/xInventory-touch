<div class="page-header">
  <h1>donor <small>details</small></h1>
</div>

<section id='modals'>                                              

    <div id = "sub-content-view">

    <table class = "demographics">
      <tr>
        <th>Name:&nbsp;</th>
        <td>
          <%= @project.name %>&nbsp;
          <%= @student.first_name rescue '' %>
        </td>
        <th>ID number:&nbsp;</th><td><%=params[:id].rjust(5,'0')%></td>
      </tr>
        <th>Date registered:&nbsp;</th><td><%=@project.created_at.strftime('%A, %d %B %Y')%></td>
      </tr>
    </table>

    <hr />

    <p class="xool_information"><strong>Project description</strong></p>
    <p class="xool_information">
    <%=render(:inline => print_content(@project.description))%> 
    </p>
  </div>
  
  <div style="padding-top:10px;float:right;">
    <table>
    <tr>
      <td><a href="/programs/select_program_to_enroll?student_id=<%=@project.id%>">Enroll into a program</a>&nbsp;&nbsp;</td>
      <td><a href="#">Remove from program</a>&nbsp;&nbsp;</td>
      <td><a href="#">Edit demographics</a>&nbsp;&nbsp;</td>
      <td><a href="#">Void</a></td>
    </tr>
    </table>
  </div>

</section> 




